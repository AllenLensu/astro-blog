{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@css/*": ["src/css/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["public/assets/*"],
      "~/*": ["src/*"]
    },
    "strictNullChecks": true
  }
}
